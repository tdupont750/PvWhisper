{
  "outputs": ["Console", "ydotool"],
  "captureTimeoutSeconds": 60,
  "deviceIndex": -1,
  "language": "en",
  "modelDir": "~/WhisperModels",
  "modelType": "Base",
  "pipePath": "/tmp/pvwhisper.fifo",
  "whisperThreads": 8,
  "textTransforms": [{
    "description": "Capitalize first letter",
    "find": "^(\\w)",
    "replace": "{1:ToUpper}",
    "caseSensitive": false,
    "isRegex": true
  }, {
    "description": "Add space at start of sentence",
    "find": "^Space\\s(\\w)",
    "replace": " {1:ToUpper}",
    "caseSensitive": false,
    "isRegex": true
  }, {
    "description": "Replace backspace with ydotool token",
    "find": "^Back\\s?space\\S?\\s",
    "replace": "{ydotool:KEY_BACKSPACE} ",
    "caseSensitive": false,
    "isRegex": true
  }, {
    "description": "Remove whisper noise messages",
    "find": "\\[(\\w|_)+\\]",
    "replace": "",
    "caseSensitive": false,
    "isRegex": true
  }]
}
